<Page x:Class="FRANCISCO_MANUEL_MARTIN_CABELLO.Frames.Inicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FRANCISCO_MANUEL_MARTIN_CABELLO.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="560" d:DesignWidth="800"
      Title="Inicio">

    <StackPanel Background="#242424">
        <Grid Width="200px" HorizontalAlignment="Left" Margin="0,0,0,26">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Width="26" Height="31" Source="/Media/InicioVerde.png" Margin="64,0,10,0"/>
            <TextBlock Grid.Column="1" Style="{StaticResource CustomText}" VerticalAlignment="Top" Margin="0,10,0,0" ><Run Text="INICIO"/></TextBlock>
        </Grid>
        <DataGrid x:Name="ProductosDataGrid" 
          AutoGenerateColumns="False" 
          HeadersVisibility="Column" 
          Background="Transparent" 
          Height="450" 
          Margin="10"
          BorderBrush="#5DB85B" GridLinesVisibility="All">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Producto" Binding="{Binding Nombre}" Width="*" />
                <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Page>
